<div class="page-header">
  <h2>Set your objectives</h2>
  <ul class="unstyle-list">
    <li class="active"><span>1</span> Scope</li>
    <li><span>2</span> Define</li>
    <li><span>3</span> Share</li>
  </ul>
</div>

<div id="scope-okr">
  <h3>Define the scope of your objectives</h3>
  <%= form_for @okr, html: { class: "" } do |okr_form| %>
    <p><%= @okr.errors.full_messages.first if @okr.errors.any? %></p>
    <%= okr_form.label :owner, "Team:" %>
    <%= okr_form.text_field :owner %><br />
    <%= okr_form.label :period, "Period:" %>
    <%= okr_form.date_select :period %><br />
    <%= okr_form.label :admin_name, "Your name:" %>
    <%= okr_form.text_field :admin_name %><br />
    <%= okr_form.label :admin_email, "Your e-mail:" %>
    <%= okr_form.text_field :admin_email %><br />
    <%= link_to "Cancel", root_path %>
    <%= okr_form.submit "Next" %>

  <% end %>
</div>

<div id="define-okr" data-o-count="<%= @okr.objectives.count %>">
  <h3>Write your Objectives and associated Key Results</h3>
  <%= form_for @okr, html: { class: "" } do |okr_form| %>
    <p><%= @okr.errors.full_messages.first if @okr.errors.any? %></p>
    <%= okr_form.fields_for :objectives do |o_form| %>
        <%= render partial 'o_form' %>
    <% end %>

    <%= link_to "Back", "#" %>
    <%= okr_form.submit "Create OKR" %>

  <% end %>
</div>

<div id="share-okr">
  <h3>Share your OKR with stakeholders who gain from knowing your work plan</h3>
  <%= form_for @okr, html: { class: "" } do |okr_form| %>
    <%= okr_form.label :public_url, "Public URL:" %>
    <%= okr_form.text_field :public_url %><br />
    <%= okr_form.label :admin_url, "Admin URL:" %>
    <%= okr_form.text_field :admin_url %><br />

    <%= link_to "View OKR" %>

  <% end %>
</div>
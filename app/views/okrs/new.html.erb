<div class="page-block">
  <h2>Set your objectives</h2>
  <ul class="list-inline">
    <li class="active"><span>1</span> Scope</li>
    <li><span>2</span> Define</li>
    <li><span>3</span> Share</li>
  </ul>
</div>

<div id="scope-okr" class="page-block">
  <div class="form-block">
    <h3>Define the scope of your objectives</h3>
  </div>
  <%= form_for @okr, html: { class: "form-horizontal" } do |form| %>

    <%= @okr.errors.full_messages.first if @okr.errors.any? %>

    <div class="form-block">
      <div class="form-group">
        <%= form.label :owner, "Team:", class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= form.text_field :owner, class: "form-control input-sm" %>
        </div>
        <div class="col-sm-2">
          <i class="fa fa-question-circle"></i>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :period, "Period:", class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= form.date_select :period, class: "form-control input-sm" %>
        </div>
        <div class="col-sm-2">
          <i class="fa fa-question-circle"></i>
        </div>
      </div>
    </div>
    <div class="form-block">
      <div class="form-group">
        <%= form.label :admin_name, "Your name:", class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= form.text_field :admin_name, class: "form-control input-sm" %>
        </div>
        <div class="col-sm-2">
          <i class="fa fa-question-circle"></i>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :admin_email, "Your e-mail:", class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= form.text_field :admin_email, class: "form-control input-sm" %>
        </div>
        <div class="col-sm-2">
          <i class="fa fa-question-circle"></i>
        </div>
      </div>
    </div>
    <div class="form-block">
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= link_to "Cancel", root_path, class: "btn btn-default" %>
          <%= form.submit "Next", remote: true, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="page-block"></div>

<div id="define-okr" class="page-block">
  <div class="form-block">
    <h3>Write your Objectives and associated Key Results</h3>
  </div>
  <%= form_for @okr, html: { class: "form-horizontal" } do |form| %>
    <div class="okr-form-group" data-o-count="0">
      <%= form.fields_for :objectives do |o_form| %>
        <%= render partial: "o_form", locals: { form: o_form } %>
      <% end %>

      <div class="form-block">
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= link_to "Add O", "#", class: "add-o-btn btn btn-default btn-xs" %>
            <%= link_to "Remove O", "#", class: "remove-o-btn btn btn-default btn-xs" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-block">
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= link_to "Back", "#", class: "btn btn-default" %>
          <%= form.submit "Create OKR", remote: true, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="page-block"></div>

<div id="share-okr" class="page-block">
  <h3>Share your OKR with stakeholders who gain from knowing your work plan</h3>
  <%= form_for @okr, html: { class: "" } do |form| %>
    <%= form.label :public_url, "Public URL:" %>
    <%= form.text_field :public_url %><br />
    <%= form.label :admin_url, "Admin URL:" %>
    <%= form.text_field :admin_url %><br />

    <%= link_to "View OKR" %>

  <% end %>
</div>
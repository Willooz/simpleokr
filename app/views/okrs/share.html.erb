<% content_for :copy_to_clipboard do %>
  <script>
    $(document).ready(function() {
      var public_clip = new ZeroClipboard($("#public_clip_button"))
      var admin_clip = new ZeroClipboard($("#admin_clip_button"))
    });
  </script>
<% end %>
